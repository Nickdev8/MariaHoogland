{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "nodenext",                // use lowercase
    "moduleResolution": "nodenext",      // use lowercase
    "allowImportingTsExtensions": true   // ‚Üê must be here
  }
}
